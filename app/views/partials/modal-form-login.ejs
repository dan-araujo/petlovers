<div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modalLoginLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
      <div class="modal-content">
  
        <div class="modal-header">
          <h5 class="modal-title" id="modalLoginLabel">Login</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
  
        <div class="modal-body">

          <form id="form_login" action="/usuarios/autenticar" method="POST">

            <div class="form-group">
              <label for="email_login" class="col-form-label">E-mail</label>
              <input type="email" class="form-control" id="email_login" name="email" value="<%= formData.email %>">
            </div>
            <div class="form-group">
              <label for="password_login" class="col-form-label">Senha</label>
              <input type="password" class="form-control" id="password_login" name="password" value="<%= formData.password %>">
            </div>

          </form>

          <a href="#" data-toggle="modal" data-target="#modal_form_redefinicao_senha">Esqueci minha senha</a>

        </div>
  
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          <button type="button" id="btn_login" class="btn btn-primary">Entrar</button>
        </div>
      </div>
    </div>
  </div>
 